<h1>Your Product</h1>


<p> <%=@product.name%> </p>
<p> <%=@product.description%> </p>
<p> <%=@product.price_in_dollars%> </p>

<%= link_to 'Edit Product', edit_product_path(@product.id) %>
<%=link_to("Delete", product_path(@product.id), method: :delete, data: {confirm: "Are you sure you want to delete?"}) %>


<h2>Reviews:</h2>

<ol>
  <% @product.reviews.each do |review| %>
    <li>
      
      <p> <%= review.comment %> </p><p><%= link_to 'Edit Review', edit_product_review_path(@product, review) %></p>
    </li>
  <% end %>
</ol>



<h4>New Review</h4>


<%= render 'reviews/form', review: @review %>
